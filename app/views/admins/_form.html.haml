= form_for(@admin) do |f|
  - if @admin.errors.any?
    #error_explanation
      %h2
        = pluralize(@admin.errors.count, "error")
        prohibited this admin from being saved:
      %ul
        - @admin.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :surname
    %br/
    = f.text_field :surname
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .actions
    = f.submit